<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff">


    <ImageView
        android:id="@+id/imageView_id"
        android:layout_width="337dp"
        android:layout_height="272dp"
        android:layout_below="@+id/heading_id"
        android:layout_centerHorizontal="true"
        app:srcCompat="@drawable/straw" />

    <TextView
        android:id="@+id/heading_id"
        android:layout_width="wrap_content"
        android:layout_height="62dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        android:text="Discover Smoothies"
        android:textSize="24sp" />

    <TextView
        android:id="@+id/description_id"
        android:layout_width="319dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
       android:layout_centerHorizontal="true"
       android:layout_below="@+id/imageView_id"
        android:text="Discover thousands of tasty smoothies    for any smoothie enthusiasist"
        android:textSize="18sp" />
</RelativeLayout>

