<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/constraint"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg">

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="67dp"
        android:layout_height="75dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="57dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/register_id"
        app:srcCompat="@drawable/main_img" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="189dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="143dp"
        android:text="SMOOTHIES TO DOOR"
        android:textColor="@android:color/background_light"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.502"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView2" />

    <TextView
        android:id="@+id/register_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="18dp"
        android:text="Sign In"
        android:textColor="@android:color/background_light"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginTop="209dp"
        android:backgroundTint="@color/colorTransparentWhite"
        android:textCursorDrawable="@color/colorTransparentWhite"
        android:orientation="vertical">

        <android.support.design.widget.TextInputLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/colorTransparentWhite"
            android:textColorHint="@color/colorHint">

            <EditText
                android:id="@+id/user_id"
                android:layout_width="314dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="42dp"
                android:backgroundTint="@color/colorTransparentWhite"
                android:drawableLeft="@drawable/ic_user"
                android:drawablePadding="20dp"
                android:hint="UserName"
                android:inputType="text"
                android:textColor="#ffffff"
                android:textColorHint="@color/colorHint"
                android:textCursorDrawable="@null"
                android:textSize="24sp" />
        </android.support.design.widget.TextInputLayout>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginTop="290dp"
        android:backgroundTint="@color/colorTransparentWhite"
        android:textCursorDrawable="@color/colorTransparentWhite"
        android:orientation="vertical">

        <android.support.design.widget.TextInputLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/colorTransparentWhite"
            android:textColorHint="@color/colorHint"
            android:textCursorDrawable="@color/colorTransparentWhite">

            <EditText
                android:id="@+id/password_id"
                android:layout_width="313dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="42dp"
                android:backgroundTint="@color/colorHint"
                android:drawableLeft="@drawable/ic_action_name"
                android:drawablePadding="20dp"
                android:hint="Password"
                android:inputType="textPassword"
                android:textColor="#ffffff"
                android:textColorHint="@color/colorHint"
                android:textCursorDrawable="@null"
                android:textSize="24sp" />
        </android.support.design.widget.TextInputLayout>

    </LinearLayout>

    <Button
        android:id="@+id/signin_id"
        android:layout_width="324dp"
        android:layout_height="55dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="58dp"
        android:background="@android:color/holo_blue_light"
        android:text="Sign In"
        android:textColor="#ffffff"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="20dp"
        android:layout_marginLeft="90dp"
        android:text="Don't have an account?"
        android:textColor="#ffffff" />

    <TextView
        android:id="@+id/signup_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="240dp"
        android:layout_alignTop="@+id/textView2"
        android:text="Sign Up"
        android:onClick="register"
        android:textColor="#ffffff" />


</RelativeLayout>